<article>	<h2><a href="<%= post.url%>"><%= post.title %></a></h2>	<ul class="meta">	  <li class="post-time"><time datetime="<%= post.created_at.strftime("%Y-%m-%d")%>"><%= post.created_at.strftime("%B %d, %Y")%></time></li>	  <li class="post-tags">tags: <%= tag_links(post) %></li>	  <% if admin? %>          	  <li>		<a class="admin edit-post" href="/posts/<%=post.id%>/edit">Edit</a>		<a class="admin del-post" href="/posts/<%=post.id%>" data-method="delete" data-confirm="are you sure?">Delete</a>	  </li>  	  <% end %>                      	</ul>        	<section class="output-html" style="border-bottom: 2px solid #ccc;">	  <%= post.body_html %>	</section>		<% unless AppSettings.disqus_shortname.blank? %>    <div id="disqus_thread"></div>    <script type="text/javascript">	    <% if development? %> var disqus_developer = 1; <% end %>    	var disqus_shortname = '<%=AppSettings.disqus_shortname%>';        	var disqus_identifier = '<%=post.id%>';    	var disqus_url = '<%=post.full_url%>';        	/* * * DON'T EDIT BELOW THIS LINE * * */    	(function() {    		var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;    		dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';    		(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);    	})();    </script>	<% end %></article>